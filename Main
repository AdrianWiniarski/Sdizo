int main(int argc, char* argv[])
{
	srand(time(NULL));

	char option;
	do {
		cout << endl;
		cout << "==== MENU GLOWNE ===" << endl;
		cout << "1.Tablica" << endl;
		cout << "2.Lista" << endl;
		cout << "3.Kopiec" << endl;
		cout << "0.Wyjscie" << endl;
		cout << "Podaj opcje:";
		option = getche();
		cout << endl;

		switch (option) {
		case '1':
			menu_tablicy();
			break;

		case '2':
			menu_listy();
			break;

		case '3':
			menu_kopca();
			break;
		}

	} while (option != '0');


	return 0;
}

